{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "name": "@bolt-foundry/gambit",
  "description": "Agent harness framework for building, running, and verifying LLM workflows in Markdown and code.",
  "version": "0.5.4",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bolt-foundry/gambit.git"
  },
  "exports": {
    ".": "./mod.ts",
    "./cli": "./src/cli.ts"
  },
  "tasks": {
    "fmt": "deno fmt",
    "lint": "deno lint",
    "guard:bfmono-imports": "deno run -A scripts/guard-bfmono-imports.ts",
    "test": "deno test --allow-all",
    "ci": "deno fmt --check && deno lint && deno task guard:bfmono-imports && deno test --allow-all --ignore=simulator-ui/__tests__/e2e",
    "fix": "deno fmt && deno lint --fix && deno test --allow-all",
    "compile": "deno compile -A --output dist/gambit src/cli.ts",
    "precommit": "deno fmt && deno lint && deno task guard:bfmono-imports && deno check && deno test -A",
    "e2e": "deno test -A simulator-ui/__tests__/e2e/*.e2e.ts",
    "e2e-logs": "deno run -A simulator-ui/__tests__/e2e/e2e-logs.ts",
    "bundle:sim": "deno bundle --output simulator-ui/dist/bundle.js simulator-ui/src/main.tsx",
    "bundle:sim:sourcemap": "deno bundle --sourcemap=external --output simulator-ui/dist/bundle.js simulator-ui/src/main.tsx",
    "bundle:sim:web": "deno bundle --platform=browser --output simulator-ui/dist/bundle.js simulator-ui/src/main.tsx",
    "bundle:sim:web:sourcemap": "deno bundle --platform=browser --sourcemap=external --output simulator-ui/dist/bundle.js simulator-ui/src/main.tsx",
    "build_npm": "deno run -A scripts/build_npm.ts"
  },
  "lint": {
    "include": [
      "src"
    ],
    "plugins": [
      "./scripts/lint/examples_remote_imports.ts"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "bolt-foundry/no-parent-directory-traversal",
        "no-external-import",
        "no-unversioned-import"
      ],
      "include": [
        "gambit/examples-remote-imports"
      ]
    }
  },
  "fmt": {
    "lineWidth": 80
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "imports": {
    "@std/front-matter": "jsr:@std/front-matter@^1.0.9",
    "@std/fs": "jsr:@std/fs@^1.0.20",
    "@std/path": "jsr:@std/path@^1.0.6",
    "@std/cli": "jsr:@std/cli@^1.0.7",
    "@std/assert": "jsr:@std/assert@^1.0.6",
    "@std/front_matter": "jsr:@std/front_matter@^0.224.4",
    "@std/tar": "jsr:@std/tar@^0.1.9",
    "@bolt-foundry/gambit-core": "jsr:@bolt-foundry/gambit-core@0.5.4",
    "@bolt-foundry/gambit-core/internal/constants": "jsr:@bolt-foundry/gambit-core@0.5.4/internal/constants",
    "@bolt-foundry/gambit-core/internal/definitions": "jsr:@bolt-foundry/gambit-core@0.5.4/internal/definitions",
    "@bolt-foundry/gambit-core/internal/loader": "jsr:@bolt-foundry/gambit-core@0.5.4/internal/loader",
    "@bolt-foundry/gambit-core/internal/markdown": "jsr:@bolt-foundry/gambit-core@0.5.4/internal/markdown",
    "@bolt-foundry/gambit-core/internal/openai_compat": "jsr:@bolt-foundry/gambit-core@0.5.4/internal/openai_compat",
    "@bolt-foundry/gambit-core/internal/render": "jsr:@bolt-foundry/gambit-core@0.5.4/internal/render",
    "@bolt-foundry/gambit-core/internal/runtime": "jsr:@bolt-foundry/gambit-core@0.5.4/internal/runtime",
    "@bolt-foundry/gambit-core/internal/schema": "jsr:@bolt-foundry/gambit-core@0.5.4/internal/schema",
    "@bolt-foundry/gambit-core/internal/state": "jsr:@bolt-foundry/gambit-core@0.5.4/internal/state",
    "@bolt-foundry/gambit-core/internal/types": "jsr:@bolt-foundry/gambit-core@0.5.4/internal/types",
    "@bolt-foundry/gambit-core/internal/providers/openrouter": "jsr:@bolt-foundry/gambit-core@0.5.4/internal/providers/openrouter",
    "playwright-core": "npm:playwright-core@^1.57.0",
    "zod": "npm:zod@^3.23.8",
    "zod-to-json-schema": "npm:zod-to-json-schema@^3.23.0",
    "@openai/openai": "npm:openai@^4.78.1",
    "react": "npm:react@^19.2.0",
    "react-dom": "npm:react-dom@^19.2.0"
  },
  "deploy": {
    "org": "boltfoundry",
    "app": "gambit-demo"
  }
}
