{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "name": "@bolt-foundry/gambit",
  "version": "0.5.0",
  "license": "Apache-2.0",
  "exports": {
    ".": "./mod.ts",
    "./cli": "./src/cli.ts"
  },
  "tasks": {
    "fmt": "deno fmt",
    "lint": "deno lint",
    "test": "deno test --allow-all",
    "ci": "deno fmt --check && deno lint && deno test --allow-all --ignore=simulator-ui/__tests__/e2e",
    "fix": "deno fmt && deno lint --fix && deno test --allow-all",
    "compile": "deno compile -A --output dist/gambit src/cli.ts",
    "precommit": "deno fmt && deno lint && deno check && deno test -A",
    "e2e": "deno test -A simulator-ui/__tests__/e2e/*.e2e.ts",
    "e2e-logs": "deno run -A simulator-ui/__tests__/e2e/e2e-logs.ts",
    "bundle:sim": "deno bundle --output simulator-ui/dist/bundle.js simulator-ui/src/main.tsx",
    "bundle:sim:sourcemap": "deno bundle --sourcemap=external --output simulator-ui/dist/bundle.js simulator-ui/src/main.tsx",
    "bundle:sim:web": "deno bundle --platform=browser --output simulator-ui/dist/bundle.js simulator-ui/src/main.tsx",
    "bundle:sim:web:sourcemap": "deno bundle --platform=browser --sourcemap=external --output simulator-ui/dist/bundle.js simulator-ui/src/main.tsx"
  },
  "lint": {
    "include": [
      "src"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "bolt-foundry/no-parent-directory-traversal"
      ]
    }
  },
  "fmt": {
    "lineWidth": 80
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "imports": {
    "@std/front-matter": "jsr:@std/front-matter@^1.0.9",
    "@std/fs": "jsr:@std/fs@^1.0.20",
    "@std/path": "jsr:@std/path@^1.0.6",
    "@std/cli": "jsr:@std/cli@^1.0.7",
    "@std/assert": "jsr:@std/assert@^1.0.6",
    "@std/front_matter": "jsr:@std/front_matter@^0.224.4",
    "zod": "npm:zod@^3.23.8",
    "zod-to-json-schema": "npm:zod-to-json-schema@^3.23.0",
    "@openai/openai": "npm:openai@^4.78.1",
    "react": "npm:react@^19.2.0",
    "react-dom": "npm:react-dom@^19.2.0"
  },
  "deploy": {
    "org": "boltfoundry",
    "app": "gambit-demo"
  }
}
