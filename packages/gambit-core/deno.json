{
  "name": "@bolt-foundry/gambit-core",
  "version": "0.8.0",
  "description": "Core runtime for Gambit decks.",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bolt-foundry/gambit.git"
  },
  "exports": {
    ".": "./mod.ts"
  },
  "tasks": {
    "fmt": "deno fmt",
    "lint": "deno lint",
    "test": "deno test --allow-all",
    "build_npm": "deno run -A scripts/build_npm.ts"
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "bolt-foundry/no-parent-directory-traversal"
      ]
    }
  },
  "imports": {
    "@deno/dnt": "jsr:@deno/dnt@^0.42.3",
    "@std/assert": "jsr:@std/assert@^1.0.6",
    "@std/front-matter": "jsr:@std/front-matter@^1.0.9",
    "@std/front-matter/any": "jsr:@std/front-matter@^1.0.9/any",
    "@std/path": "jsr:@std/path@^1.0.6",
    "@openai/openai": "npm:openai@^4.78.1",
    "zod": "npm:zod@^3.23.8",
    "zod-to-json-schema": "npm:zod-to-json-schema@^3.23.0"
  }
}
